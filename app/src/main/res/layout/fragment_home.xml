<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sun.innotext.fragments.FragmentHome">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/colorWhite">

        <FrameLayout
            android:id="@+id/fragment_clock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"></FrameLayout>

        <FrameLayout
            android:id="@+id/fragment_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></FrameLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_gps_48dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_bluetooth" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_lock" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_notifications" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_weight="4">

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/remote_switch"
                style="?android:attr/borderlessButtonStyle"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_press"
                android:padding="20dp"
                android:text="远程开关"
                android:textAlignment="center"
                android:textSize="30dp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/lock"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight=".5"
                android:background="@drawable/button_press"
                android:text="全方位锁车"
                android:textAlignment="center"
                android:textSize="30dp" />

            <Button
                android:id="@+id/light"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:layout_marginLeft="2dp"
                android:layout_weight=".5"
                android:background="@drawable/button_press"
                android:text="远程开关灯"
                android:textAlignment="center"
                android:textSize="30dp" />

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/warning"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight=".3"
                android:background="@drawable/button_press"
                android:text="警告"
                android:textAlignment="center"
                android:textSize="30dp" />

            <Button
                android:id="@+id/resist"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:layout_weight=".4"
                android:background="@drawable/button_press"
                android:text="自动抗拒"
                android:textAlignment="center"
                android:textSize="30dp" />

            <Button
                android:id="@+id/whistle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight=".3"
                android:background="@drawable/button_press"
                android:text="鸣笛"
                android:textAlignment="center"
                android:textSize="30dp" />

        </TableRow>

    </TableLayout>


</LinearLayout>
